<h1>New Order from Jungle!</h1>
<table>
  <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
<% @order_total = 0 %>
<%= LineItem.where(order_id: @order.id).find_each do | line_item | %>
  <% product = Product.find_by(id: line_item.product_id) %>
  <% item_total = product.price * line_item.quantity %>
  <% @order_total += item_total %>
      <tbody>
  <tr>
    <td>
      <h4><%= product.name %></h4>
      <br>
    </td>
    <td>
      $<%= product.price %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      $<%= item_total %>
    </td>
  </tr>
<% end %>
</tbody>
<tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            $<%= @order_total %>
          </th>
        </tr>
      </tfoot>
</table>