<section class="col-sm-8 review">
  <% @user = User.find(review.user_id) %>
  <div class="row">
    <div class="col-sm-12 review_header">
      <div class="review_user">
        <%= @user.first_name %>
      </div>
      <div class="review_stars">
        <%= review.rating %>/5
      </div>
     </div>
    <div class="col-sm-12">
      <div class="col-sm-10">
      Says:
      </div>
      <div class="col-sm-10 col-sm-offset-1">
        <%= review.description %>
      </div>
    </div>
  </div>
</section>
